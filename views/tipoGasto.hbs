{{> header }}
<div class="grid-x grid-margin-x">
  <div class="cell small-12">
{{#if results}} 
    <div class="off-canvas-wrapper">
      <div class="off-canvas-absolute position-right" id="detalle" data-off-canvas>
        <form action="/tipoGasto" method="POST" >
            <label>
                Codigo
                <input id="codigo" type="text" name="codigo" maxlength="2" placeholder="Ingresa el codigo">
            </label>
            <label>
                Nombre
                <input id="nombre" type="text" name="nombre" placeholder="Ingresa el nombre">
            </label>
            <label>
                Descripcion
                <input id="descripcion" type="text" name="descripcion" placeholder="Ingresa una descripcion">
            </label>
            <label>
                Color
                <input id="color" type="color" name="color">
            </label>
            <label>
                Valor deseado
                <input id="deseado" type="text" name="deseado" maxlength="5" placeholder="Ingresa tu porcentaje">
            </label>
            <label>
                Valor promedio
                <input id="promedio" type="text" name="promedio" maxlength="5" disabled>
            </label>
            <button class="button" name="submit" type="submit" value="mod">Modificar</button>
            <button class="button" name="submit" type="submit" value="del">Eliminar</button>
        </form>
      </div>
      <div class="off-canvas-content" style="min-height: 670px;" data-off-canvas-content>
        <table>
            <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Promedio</th>
            </tr>
    {{#each results}}
            <tr data-toggle="detalle" onclick="irADetalle({{this.tg_codigo}});">
                <td>{{this.tg_codigo}}</td>
                <td>{{this.tg_nombre}}</td>
                <td>{{this.tg_promedio}}</td>
            </tr>
    {{/each}}
        </table>
        <br>
        <button type="button" class="button">Ingresar</button>
      </div>
    </div>
{{/if}} 
  </div>
</div>



    
{{> footer }}

